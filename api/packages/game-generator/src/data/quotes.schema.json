{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Quotes",
  "description": "Array of cryptoquip quotes",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1,
        "description": "Unique identifier for the quote"
      },
      "text": {
        "type": "string",
        "minLength": 1,
        "description": "The quote text to be encrypted"
      },
      "author": {
        "type": "string",
        "minLength": 1,
        "description": "Author of the quote"
      },
      "category": {
        "type": "string",
        "minLength": 1,
        "description": "Category or subject of the quote"
      },
      "difficulty": {
        "type": "number",
        "minimum": 0,
        "maximum": 100,
        "description": "Pre-computed difficulty score from 0-100"
      }
    },
    "required": ["id", "text", "author", "category", "difficulty"],
    "additionalProperties": false
  }
}
